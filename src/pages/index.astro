---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<p class="mb-4">
			Hello, I'm George Spanos, Software Engineer and Founder of <a
				class="cactus-link"
				href="https://moby-it.com"
				target="_blank">Moby IT</a
			>. This blog is about me, thinking out loud. Topics usually include software, entrepreneurship
			and self-reflecting. I need to spend time with all three for the sake of sanity. I also find
			it hard to stay serious for extended periods of time.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Lastest Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
